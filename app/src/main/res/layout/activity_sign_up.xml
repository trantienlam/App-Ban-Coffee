<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Login">
    <ImageButton
        android:translationZ="1dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/btn_back"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_margin="10dp"
        android:background="@drawable/roundedcorner"
        android:src="@drawable/button_back" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/background_signup"
            />
    </FrameLayout>
    <LinearLayout
        android:paddingVertical="10dp"
        android:background="@drawable/rouder_conner1"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coffee"
                android:textSize="40dp"
                android:fontFamily="@font/gotham"
                android:textColor="#EFEFEF"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginLeft="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shop"
                    android:textSize="36dp"
                    android:fontFamily="@font/gotham"
                    android:textColor="@color/tan"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/dark_tan"/>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginHorizontal="10dp"
        android:paddingVertical="20dp"
        android:background="@drawable/rouder_coner"
        android:layout_marginTop="250dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:paddingHorizontal="32dp">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#96ffffff">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_fullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="16dp"
                android:hint="Tên người dùng"
                android:textSize="18dp"
                android:fontFamily="@font/gotham"
                android:inputType="textEmailAddress"
                android:textColor="@color/white"
                android:shadowColor="@color/white"
                android:background="@android:color/transparent"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#96ffffff">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_phoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="16dp"
                android:hint="Số điện thoại"
                android:textSize="18dp"
                android:fontFamily="@font/gotham"
                android:inputType="textEmailAddress"
                android:textColor="@color/white"
                android:shadowColor="@color/white"
                android:background="@android:color/transparent"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#96ffffff">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="16dp"
                android:hint="Tài khoản"
                android:textSize="18dp"
                android:fontFamily="@font/gotham"
                android:inputType="textEmailAddress"
                android:textColor="@color/white"
                android:shadowColor="@color/white"
                android:background="@android:color/transparent"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#96ffffff">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="16dp"
                android:hint="Mật khẩu"
                android:fontFamily="@font/gotham"
                android:textSize="20dp"
                android:inputType="textPassword"
                android:textColor="@color/white"
                android:background="@android:color/transparent"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#96ffffff">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_confirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="16dp"
                android:hint="Nhập lại mật khẩu"
                android:fontFamily="@font/gotham"
                android:textSize="18dp"
                android:inputType="textPassword"
                android:textColor="@color/white"
                android:background="@android:color/transparent"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:paddingHorizontal="40dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >
            <Button
                android:textSize="17dp"
                android:id="@+id/btn_Confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_round_bg_white"
                android:textColor="@color/dark_gray"
                android:theme="@style/Theme.ButtonDark"
                android:text="Đăng ký"
                android:fontFamily="@font/gotham"
                />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>