<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Login">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/background_login"
            />
    </FrameLayout>
    <LinearLayout
        android:paddingVertical="10dp"
        android:background="@drawable/rouder_conner1"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="100dp"

        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coffee"
                android:textSize="40dp"
                android:fontFamily="@font/gotham"
                android:textColor="#EFEFEF"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginLeft="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shop"
                    android:textSize="36dp"
                    android:fontFamily="@font/gotham"
                    android:textColor="@color/tan"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/dark_tan"/>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginHorizontal="10dp"
        android:paddingVertical="20dp"
        android:background="@drawable/rouder_coner"
        android:layout_marginTop="350dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:paddingHorizontal="32dp">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#96ffffff">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="16dp"
                android:hint="Tài khoản"
                android:textSize="20dp"
                android:fontFamily="@font/gotham"
                android:inputType="textEmailAddress"
                android:textColor="@color/white"
                android:shadowColor="@color/white"
                android:background="@android:color/transparent"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#96ffffff">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="16dp"
                android:hint="Mật khẩu"
                android:fontFamily="@font/gotham"
                android:textSize="20dp"
                android:inputType="textPassword"
                android:textColor="@color/white"
                android:background="@android:color/transparent"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingHorizontal="40dp">

            <Button
                android:id="@+id/btn_signIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@drawable/button_round_bg_white"
                android:fontFamily="@font/gotham"
                android:text="Đăng nhập"
                android:textColor="@color/dark_gray"
                android:textSize="17dp"
                android:layout_marginBottom="10dp"
                android:theme="@style/Theme.ButtonDark" />

            <Button
                android:id="@+id/btn_signUp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_round_bg_white"
                android:fontFamily="@font/gotham"
                android:text="Đăng ký"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/dark_gray"
                android:textSize="17dp"
                android:theme="@style/Theme.ButtonDark" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>