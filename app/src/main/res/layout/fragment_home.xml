<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/screen"
    >
    <LinearLayout
        android:id="@+id/maincontent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.MainActivity"
        android:orientation="vertical"
        android:background="@color/dark_purple2"
        >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center_vertical"
            >
            <LinearLayout
                android:padding="15dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:fontFamily="@font/gotham"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark_tan"
                    android:textSize="50dp"
                    android:text="Coffee"/>
                <TextView
                    android:fontFamily="@font/gotham"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-30dp"
                    android:text="Shop"
                    android:textSize="60dp"
                    android:textColor="@color/tan"
                    />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <LinearLayout
                    android:layout_marginRight="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:padding="10dp"
                        android:id="@+id/btn_profile"
                        android:background="@android:color/transparent"
                        android:layout_width="70dp"
                        android:scaleType="centerCrop"
                        android:layout_height="70dp"
                        android:src="@drawable/user"
                        />

                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
        <EditText
            android:id="@+id/edt_search"
            android:fontFamily="@font/gotham"
            android:singleLine="true"
            android:paddingVertical="15dp"
            android:paddingHorizontal="15dp"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="15dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:focusableInTouchMode="true"
            android:inputType="text"
            android:background="@drawable/bg_input_search"
            android:textColorHint="@color/dark_tan"
            android:drawableLeft="@android:drawable/ic_menu_search"
            android:hint="coffee mà bạn yêu thích..."
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ListView
                android:paddingTop="20dp"
                android:layout_marginTop="20dp"
                android:id="@+id/list_category"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                tools:listitem="@layout/button_rotate_vertical"
                android:background="@drawable/bg_top_right_rounded"
                android:scrollbars="none"
                android:smoothScrollbar="true"
                >

            </ListView>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"

                android:orientation="horizontal"
                tools:listitem="@layout/card_item"
                />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
