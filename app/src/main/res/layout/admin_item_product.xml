<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_marginTop="20dp"
        app:cardCornerRadius="20dp"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="@color/dark_purple1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <LinearLayout
                android:layout_toRightOf="@id/card_img"
                android:gravity="center_vertical"
                android:paddingVertical="5dp"
                android:paddingHorizontal="15dp"
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/name_of_product_admin"
                    android:textColor="@color/tan"
                    android:layout_width="wrap_content"
                    android:textSize="21dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gotham"

                    android:text="Name of product"
                    />
                <TextView
                    android:id="@+id/price_of_product_admin"
                    android:textColor="@color/tan"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/gotham"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price of prodct"
                    />
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp"
                android:id="@+id/card_img"
                android:background="@android:color/transparent"
                android:layout_alignParentStart ="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/admin_img_product"
                    android:scaleType="centerCrop"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/coffee2"
                    />
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>